<div class="container">
  <div class="title">
    <h1>My Tasks</h1>
  </div>
  <div class="body">
    <% @tasks.each do |task| %>
    <form class="form-inline">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="checkbox-task">
        <label class="form-check-label" for="checkbox-task"><%= link_to task.title, task_path(task.id) %></label>
      </div>
    </form>
    <% end %>
    <div class="task-link">
      <p class="btn btn-primary"><%= link_to "Add new task", new_task_path %></p>
    </div>
  </div>
</div>
