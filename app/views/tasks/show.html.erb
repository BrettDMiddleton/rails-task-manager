<div class="container">
  <div class="title">
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
  </div>
  <div class="body">
    <div class="task-link">
      <p class="btn btn-primary"><%= link_to "Home", tasks_path %></p>
      <p class="btn btn-primary"><%= link_to "Edit", edit_task_path %></p>
      <p class="btn btn-primary"><%= link_to "Delete", task_path(@task.id), method: :delete %></p>
    </div>
  </div>
</div>
